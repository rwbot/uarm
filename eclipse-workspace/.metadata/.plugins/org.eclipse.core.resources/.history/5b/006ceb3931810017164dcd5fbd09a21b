package com.jogamp.opengl;

import com.jogamp.nativewindow.CapabilitiesImmutable;

public abstract interface GLCapabilitiesImmutable
  extends CapabilitiesImmutable
{
  public static final String DEFAULT_SAMPLE_EXTENSION = "default";
  
  public abstract GLProfile getGLProfile();
  
  public abstract int getAccumAlphaBits();
  
  public abstract int getAccumBlueBits();
  
  public abstract int getAccumGreenBits();
  
  public abstract int getAccumRedBits();
  
  public abstract int getDepthBits();
  
  public abstract boolean getDoubleBuffered();
  
  public abstract boolean getHardwareAccelerated();
  
  public abstract String getSampleExtension();
  
  public abstract boolean getSampleBuffers();
  
  public abstract int getNumSamples();
  
  public abstract int getStencilBits();
  
  public abstract boolean getStereo();
  
  public abstract boolean isPBuffer();
  
  public abstract boolean isFBO();
  
  public abstract boolean equals(Object paramObject);
  
  public abstract int hashCode();
  
  public abstract String toString();
}
