package com.jogamp.nativewindow;

import com.jogamp.common.type.WriteCloneable;

public abstract interface CapabilitiesImmutable
  extends VisualIDHolder, WriteCloneable, Comparable<CapabilitiesImmutable>
{
  public abstract int getRedBits();
  
  public abstract int getGreenBits();
  
  public abstract int getBlueBits();
  
  public abstract int getAlphaBits();
  
  public abstract boolean isBackgroundOpaque();
  
  public abstract boolean isOnscreen();
  
  public abstract boolean isBitmap();
  
  public abstract int getTransparentRedValue();
  
  public abstract int getTransparentGreenValue();
  
  public abstract int getTransparentBlueValue();
  
  public abstract int getTransparentAlphaValue();
  
  public abstract boolean equals(Object paramObject);
  
  public abstract int hashCode();
  
  public abstract StringBuilder toString(StringBuilder paramStringBuilder);
  
  public abstract String toString();
}
