package com.jogamp.nativewindow;

public abstract interface ScalableSurface
{
  public static final float IDENTITY_PIXELSCALE = 1.0F;
  public static final float AUTOMAX_PIXELSCALE = 0.0F;
  
  public abstract boolean setSurfaceScale(float[] paramArrayOfFloat);
  
  public abstract float[] getRequestedSurfaceScale(float[] paramArrayOfFloat);
  
  public abstract float[] getCurrentSurfaceScale(float[] paramArrayOfFloat);
  
  public abstract float[] getMinimumSurfaceScale(float[] paramArrayOfFloat);
  
  public abstract float[] getMaximumSurfaceScale(float[] paramArrayOfFloat);
}
