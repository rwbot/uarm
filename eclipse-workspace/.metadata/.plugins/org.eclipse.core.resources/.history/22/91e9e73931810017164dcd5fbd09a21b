package com.jogamp.newt.event;

public abstract interface WindowListener
  extends NEWTEventListener
{
  public abstract void windowResized(WindowEvent paramWindowEvent);
  
  public abstract void windowMoved(WindowEvent paramWindowEvent);
  
  public abstract void windowDestroyNotify(WindowEvent paramWindowEvent);
  
  public abstract void windowDestroyed(WindowEvent paramWindowEvent);
  
  public abstract void windowGainedFocus(WindowEvent paramWindowEvent);
  
  public abstract void windowLostFocus(WindowEvent paramWindowEvent);
  
  public abstract void windowRepaint(WindowUpdateEvent paramWindowUpdateEvent);
}
