package jogamp.graph.font.typecast.ot;













public class Point
{
  public int x = 0;
  public int y = 0;
  public boolean onCurve = true;
  public boolean endOfContour = false;
  
  public Point(int paramInt1, int paramInt2, boolean paramBoolean1, boolean paramBoolean2) {
    x = paramInt1;
    y = paramInt2;
    onCurve = paramBoolean1;
    endOfContour = paramBoolean2;
  }
  
  public String toString() {
    return "P[" + x + "/" + y + ", on " + onCurve + ", end " + endOfContour + "]";
  }
}
