package com.jogamp.graph.curve;

import jogamp.graph.geom.plane.AffineTransform;

public class OutlineShapeXForm {
  public final OutlineShape shape;
  private AffineTransform t;
  
  public OutlineShapeXForm(OutlineShape paramOutlineShape, AffineTransform paramAffineTransform) {
    shape = paramOutlineShape;
    t = paramAffineTransform;
  }
  
  public final AffineTransform getTransform() { return t; }
  public final void setTransform(AffineTransform paramAffineTransform) { t = paramAffineTransform; }
}
